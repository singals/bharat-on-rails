<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @debtor.name %>
</p>

<p>
  <strong>Village:</strong>
  <%= @debtor.village %>
</p>

<p>
  <strong>Phone:</strong>
  <%= @debtor.phone %>
</p>

<%# TODO allow to enter interest %>
<p>
  <strong>Is active:</strong>
  <%= @debtor.is_active %>
</p>

  <table style="width: 100%;" border="1">
    <div style="width: 100%;">
      <tr>
        <th>Deposits</th>
        <th>Sales</th>
      </tr>
      <tr>
        <div style="float:left; width: 50%">
          <td>
            <table id="deposits_table">
              <tr>
                <th>Date</th>
                <th>Amount</th>
              </tr>
              <%= render @debtor.deposits %>
            </table>
          </td>
        </div>
        <div style="float:right; width: 50%">
          <td>
            <table id="sales_table">
              <!--add column for interest-->
              <tr>
                <th>Date</th>
                <th>Amount</th>
                <th colspan="1"></th>
              </tr>
              <%= render @debtor.sales %>
            </table>
          </td>
        </div>
      </tr>
    </div>
  </table>
